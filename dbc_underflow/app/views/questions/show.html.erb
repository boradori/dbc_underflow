<div class="row">
  <div class="large-12 columns">
    <h1>DBC Underflow</h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <p>
      <strong>Title:</strong>
      <%= @question.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @question.content %>
    </p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
     <% @question.answers.each_with_index do |answer, index| %>
        <p><%= index %>. <%= answer.content %></p>
      <% end %>
  </div>
</div>


<div class="row">
  <div class="large-12 columns">
    <%= link_to 'Back', :back %>
</div>

